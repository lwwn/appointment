<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.appointment.dao.UserMapper">
    <!-- 根据主键查询-->
    <select id="getAsIdUserInfo" resultType="com.appointment.entity.User" parameterType="int" >
        select  *
        from User
        where id = #{id}
    </select>

    <!-- 根据手机号查询-->
    <select id="getUserInfo" resultType="com.appointment.entity.User" parameterType="java.lang.String" >
        select  *
        from User
        where phone = #{phone}
    </select>

<!--    设置用户信息-->
    <update id="updateUser" parameterType="java.util.Map">
        update User
        set name= #{user.name},qq=#{user.qq},email=#{user.email},describe=#{user.describe},phone=#{user.phone},password=#{user.password}
        where id=#{user.id}
    </update>


</mapper>