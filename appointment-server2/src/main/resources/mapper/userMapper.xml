<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.appointment.dao.UserDao">
    <!-- 根据主键查询-->
    <select id="getAsIdUserInfo" resultType="com.appointment.entity.User" parameterType="java.lang.int" >
        select  *
        from User
        where id = #{id}
    </select>

    <!-- 根据手机号查询-->
    <select id="getUserInfo" resultType="com.appointment.entity.User" parameterType="java.lang.Integer" >
        select  *
        from User
        where id = #{phone}
    </select>
</mapper>